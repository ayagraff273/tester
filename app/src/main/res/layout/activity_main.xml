<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/thecollection"
        android:src="@drawable/dots"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@null"

        />


    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WardrobePal "
        android:textSize="45sp"
        android:textColor="#66005E"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thecollection"

        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose your outfit of the day!"
        android:textSize="20sp"
        android:textColor="@color/button_color"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/appName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/random"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="15dp"
        android:drawableBottom="@drawable/random2"
        android:src="@drawable/random2"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="ערבוב בגדים"
        android:background="?attr/selectableItemBackground"

        app:layout_constraintTop_toBottomOf="@id/headline" />

    <ImageView
        android:id="@+id/shirt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/shirt2"
        android:contentDescription="חולצה"
        app:layout_constraintTop_toBottomOf="@id/random"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_background"
        android:elevation="4dp" />

    <ImageView
        android:id="@+id/shirtArrowLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_left"
        android:contentDescription="חץ שמאלה עבור חולצה"
        app:layout_constraintTop_toTopOf="@id/shirt"
        app:layout_constraintBottom_toBottomOf="@id/shirt"
        app:layout_constraintEnd_toStartOf="@id/shirt"
        android:layout_marginEnd="8dp" />

 <ImageView
     android:id="@+id/shirtArrowRight"
     android:layout_width="40dp"
     android:layout_height="40dp"
     android:layout_marginStart="8dp"
     android:contentDescription="חץ ימינה עבור חולצה"
     android:src="@drawable/arrow_right"
     app:layout_constraintBottom_toBottomOf="@id/shirt"
     app:layout_constraintStart_toEndOf="@id/shirt"
     app:layout_constraintTop_toTopOf="@id/shirt" />



    <ImageView
        android:id="@+id/imageViewPants"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sample_pants"
        android:contentDescription="מכנסיים"
        app:layout_constraintTop_toBottomOf="@id/shirt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background"
        android:elevation="4dp" />

    <ImageView
        android:id="@+id/pantsArrowLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_left"
        android:contentDescription="חץ שמאלה עבור מכנסיים"
        app:layout_constraintTop_toTopOf="@id/imageViewPants"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPants"
        app:layout_constraintEnd_toStartOf="@id/imageViewPants"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/pantsArrowRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_right"
        android:contentDescription="חץ ימינה עבור מכנסיים"
        app:layout_constraintTop_toTopOf="@id/imageViewPants"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPants"
        app:layout_constraintStart_toEndOf="@id/imageViewPants"
        android:layout_marginStart="8dp" />
    <ImageView
        android:id="@+id/imageViewShoes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shoes"
        android:contentDescription="מכנסיים"
        app:layout_constraintTop_toBottomOf="@id/imageViewPants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background"
        android:elevation="10dp" />
    <ImageView
        android:id="@+id/shoesArrowRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_right"
        android:contentDescription="חץ ימינה עבור מכנסיים"
        app:layout_constraintTop_toTopOf="@id/imageViewShoes"
        app:layout_constraintBottom_toBottomOf="@id/imageViewShoes"
        app:layout_constraintStart_toEndOf="@id/imageViewShoes"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/shoesArrowLeft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_left"
        android:contentDescription="חץ שמאלה עבור מכנסיים"
        app:layout_constraintTop_toTopOf="@id/imageViewShoes"
        app:layout_constraintBottom_toBottomOf="@id/imageViewShoes"
        app:layout_constraintEnd_toStartOf="@id/imageViewShoes"
        android:layout_marginEnd="8dp" />



    <ImageButton
        android:id="@+id/addShirt"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:background="@null"
        android:contentDescription="הוסף חולצה"
        android:elevation="5dp"
        android:src="@drawable/plus_small"
        app:layout_constraintEnd_toEndOf="@id/shirt"
        app:layout_constraintTop_toTopOf="@id/shirt" />

    <ImageButton
        android:elevation="5dp"
        android:id="@+id/addPants"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/plus_small"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@id/imageViewPants"
        app:layout_constraintEnd_toEndOf="@id/imageViewPants"
        android:layout_margin="8dp"
        android:contentDescription="הוסף מכנסיים" />




</androidx.constraintlayout.widget.ConstraintLayout>
